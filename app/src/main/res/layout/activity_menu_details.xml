<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/menu_image_details"
                android:layout_width="320dp"
                android:layout_height="460dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/menu_image_details"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="Menu Name"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/menu_name_details"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="Price"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/menu_name_details"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:text="Number of People"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/menu_name_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/menu_image_details"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="Menu Name"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/menu_price_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/menu_name_details"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="Menu Price"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/editText_NoOfPeople"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:inputType="number"
                        android:maxLength="3" />

                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/md_add_to_cart_button"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/menu_no_of_people"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorPrimary"
                android:padding="10dp"
                android:text="Add to Cart"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>